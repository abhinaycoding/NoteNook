rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Profiles: Users can only read/write their own profiles
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Private Data: Scoped by user_id field
    // Covers 'sessions', 'tasks', 'notes', 'notifications'
    match /{collection}/{docId} {
      allow read, write: if request.auth != null && (
        collection in ['sessions', 'tasks', 'notes', 'notifications'] &&
        (
          (request.resource != null && (request.resource.data.user_id == request.auth.uid || request.resource.data.id == request.auth.uid)) ||
          (resource != null && (resource.data.user_id == request.auth.uid || resource.data.id == request.auth.uid))
        )
      );
    }

    // 4. Collaborative Study Rooms
    // Grant access to authenticated users for shared rooms
    match /study_rooms/{roomId} {
      allow read, write: if request.auth != null;
    }
    match /room_members/{memberId} {
      allow read, write: if request.auth != null;
    }
    match /room_messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    match /room_whiteboard/{whiteboardId} {
      allow read, write: if request.auth != null;
    }
  }
}
